<UserControl x:Class="DEMO2.Manual.Setting.VacuumSetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900"
             Background="White">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="ValueBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="34" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Background" Value="#DA8EC1" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Margin" Value="6,0,0,0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="#B4E1F4" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="18,8,0,0" VerticalAlignment="Top">
        <Border BorderBrush="Black" BorderThickness="1" Padding="16" Margin="0,0,16,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="220" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Vacuum ON Delay(ms)" Style="{StaticResource LabelStyle}" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text=":" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" />
                <TextBox Grid.Row="0" Grid.Column="2" Style="{StaticResource ValueBoxStyle}" Text="000000" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Vacuum OFF Delay(ms)" Style="{StaticResource LabelStyle}" Margin="0,12,0,0" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text=":" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" Margin="0,12,0,0" />
                <TextBox Grid.Row="1" Grid.Column="2" Style="{StaticResource ValueBoxStyle}" Text="000000" Margin="0,12,0,0" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Vacuum Pressure Threshold(kPa)" Style="{StaticResource LabelStyle}" Margin="0,12,0,0" />
                <TextBlock Grid.Row="2" Grid.Column="1" Text=":" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" Margin="0,12,0,0" />
                <TextBox Grid.Row="2" Grid.Column="2" Style="{StaticResource ValueBoxStyle}" Text="000000" Margin="0,12,0,0" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Vacuum Timeout(ms)" Style="{StaticResource LabelStyle}" Margin="0,12,0,0" />
                <TextBlock Grid.Row="3" Grid.Column="1" Text=":" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" Margin="0,12,0,0" />
                <TextBox Grid.Row="3" Grid.Column="2" Style="{StaticResource ValueBoxStyle}" Text="000000" Margin="0,12,0,0" />

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Vacuum Retry Count" Style="{StaticResource LabelStyle}" Margin="0,12,0,0" />
                <TextBlock Grid.Row="4" Grid.Column="1" Text=":" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" Margin="0,12,0,0" />
                <TextBox Grid.Row="4" Grid.Column="2" Style="{StaticResource ValueBoxStyle}" Text="000000" Margin="0,12,0,0" />

                <StackPanel Grid.Row="5" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                    <Button Content="Apply" Style="{StaticResource ActionButtonStyle}" />
                    <Button Content="Reset" Style="{StaticResource ActionButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>