<UserControl x:Class="DEMO2.Manual.Setting.OriginOffsetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900"
             Background="White">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="ValueBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="110" />
            <Setter Property="Height" Value="30" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Background" Value="#D3D3D3" />
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Margin" Value="6" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="#B4E1F4" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <Style x:Key="ResultBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ValueBoxStyle}">
            <Setter Property="Width" Value="100" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="15,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <!-- Center content -->
        <Grid Grid.Column="0" Margin="15,0" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="X Offset(mm)" Style="{StaticResource LabelStyle}" />
                <TextBlock Grid.Column="1" Text=":" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" />
                <TextBox Grid.Column="2" Style="{StaticResource ValueBoxStyle}" Background="#DA8EC1" Text="50.00" />
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="X Base(mm)" Style="{StaticResource LabelStyle}" />
                <TextBlock Grid.Column="1" Text=":" Style="{StaticResource LabelStyle}" HorizontalAlignment="Center" />
                <TextBox Grid.Column="2" Style="{StaticResource ValueBoxStyle}" Text="000.00" />
            </Grid>

            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="2" Padding="10" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Calculated Reference Angle (θ_new) :" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" />
                        <TextBox Style="{StaticResource ValueBoxStyle}" Width="80" Text="29.00" Margin="8,0,0,0" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Calculated Origin Position : " Style="{StaticResource LabelStyle}" Margin="0,0,0,6" />
                        <TextBox Style="{StaticResource ValueBoxStyle}" Width="100" Text="50.00" Margin="130,-30,166,0" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Grid.Column="0" Content="Calculate" Style="{StaticResource ActionButtonStyle}" />
                <Button Grid.Row="0" Grid.Column="1" Content="Apply" Style="{StaticResource ActionButtonStyle}" />
                <Button Grid.Row="1" Grid.Column="0" Content="Slow Test" Style="{StaticResource ActionButtonStyle}" />
                <Button Grid.Row="1" Grid.Column="1" Content="Reset" Style="{StaticResource ActionButtonStyle}" />
            </Grid>
        </Grid>

        <!-- Right results -->
        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="2" Padding="10" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="ΔX" Style="{StaticResource LabelStyle}" />
                <TextBox Style="{StaticResource ResultBoxStyle}" Text="50.00" Margin="-70,4,0,8" />

                <TextBlock Text="Δθ1" Style="{StaticResource LabelStyle}" />
                <TextBox Style="{StaticResource ResultBoxStyle}" Text="-74.40" Margin="-70,4,0,8" />

                <TextBlock Text="Δθ2" Style="{StaticResource LabelStyle}" />
                <TextBox Style="{StaticResource ResultBoxStyle}" Text="151.00" Margin="-70,4,0,8" />

                <TextBlock Text="θ new" Style="{StaticResource LabelStyle}" />
                <TextBox Style="{StaticResource ResultBoxStyle}" Text="29.00" Margin="-70,4,0,12" />

                <TextBlock Text="Arm" Style="{StaticResource LabelStyle}" Margin="0,0,0,6" />
                <StackPanel Orientation="Horizontal">
                    <Button Content="A" Width="60" Height="35" FontSize="16" FontWeight="Bold" Background="#33CC66" BorderBrush="Black" BorderThickness="2" />
                    <Button Content="B" Width="60" Height="35" FontSize="16" FontWeight="SemiBold" Background="#B4E1F4" BorderBrush="Black" BorderThickness="2" Margin="6,0,0,0" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>