<UserControl x:Class="DEMO2.Manual.Setting.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900"
             Background="White">
    <UserControl.Resources>
        <SolidColorBrush x:Key="NavInactive" Color="#ADD8E6" />
        <SolidColorBrush x:Key="NavActive" Color="#66CC66" />

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="130" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Margin" Value="0,6,0,0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Background" Value="{StaticResource NavInactive}" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left navigation -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top">
            <Button x:Name="btnOriginOffset" Content="Origin Offset" Style="{StaticResource NavButtonStyle}" Click="OnOriginOffsetClicked" />
            <Button x:Name="btnSystemPoint" Content="System Point" Style="{StaticResource NavButtonStyle}" Click="OnSystemPointClicked" />
            <Button x:Name="btnRetrySet" Content="Retry Set." Style="{StaticResource NavButtonStyle}" Click="OnRetrySetClicked" />
            <Button x:Name="btnVacuumSet" Content="Vacuum Set." Style="{StaticResource NavButtonStyle}" Click="OnVacuumSetClicked" />
            <Button x:Name="btnSoftLimits" Content="Soft Limits" Style="{StaticResource NavButtonStyle}" Click="OnSoftLimitsClicked" />
            <Rectangle Height="30" Visibility="Hidden" />
            <Button x:Name="btnOthers" Content="Others" Style="{StaticResource NavButtonStyle}" Click="OnOthersClicked" />
        </StackPanel>

        <!-- Content area -->
        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="15,0,0,0">
            <ContentControl x:Name="ContentArea" />
        </Border>
    </Grid>
</UserControl>