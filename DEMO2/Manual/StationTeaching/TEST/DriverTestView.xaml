<UserControl x:Class="DEMO2.Manual.DriverTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Hardware Test (Buzzer &amp; LED)" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <GroupBox Header="Buzzer Test" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Button Content="Buzzer ON" Width="100" Height="40" Margin="0,0,10,0" Click="BtnBuzzerOn_Click"/>
                    <Button Content="Buzzer OFF" Width="100" Height="40" Click="BtnBuzzerOff_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="LED Test">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="LED 1 (Left)" Grid.Row="0" Grid.Column="0" Margin="5"/>
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                        <Button Content="Blue" Background="LightBlue" Click="BtnLed1Blue_Click" Margin="2"/>
                        <Button Content="Red" Background="LightPink" Click="BtnLed1Red_Click" Margin="2"/>
                        <Button Content="OFF" Click="BtnLed1Off_Click" Margin="2"/>
                    </StackPanel>

                    <TextBlock Text="LED 2 (Center)" Grid.Row="0" Grid.Column="1" Margin="5"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                        <Button Content="Blue" Background="LightBlue" Click="BtnLed2Blue_Click" Margin="2"/>
                        <Button Content="Red" Background="LightPink" Click="BtnLed2Red_Click" Margin="2"/>
                        <Button Content="OFF" Click="BtnLed2Off_Click" Margin="2"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>