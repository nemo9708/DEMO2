<UserControl x:Class="DEMO2.Manual.StationTeaching.StationTeachingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BlueBrush" Color="#ADD8E6"/>
        <SolidColorBrush x:Key="GreenBrush" Color="#32CD32"/>
        <SolidColorBrush x:Key="OrangeBrush" Color="#F4A460"/>
        <SolidColorBrush x:Key="GrayBrush" Color="#D3D3D3"/>

        <Style x:Key="NormalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BlueBrush}"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="ToggleButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="{StaticResource BlueBrush}"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource GreenBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A9A9A9"/>
                                <Setter Property="Foreground" Value="DimGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DropdownStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="{StaticResource OrangeBrush}"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,5,0">
            <Button Content="Setting" Style="{StaticResource NormalButtonStyle}" Height="40"/>
            <Button x:Name="btnSlotSet" Content="Slot Set" Style="{StaticResource NormalButtonStyle}" Height="40"
                    Click="BtnSlotSet_Click"/>
            <Button Content="TEST" Style="{StaticResource NormalButtonStyle}" Height="40"/>
            <Grid Height="250"/>
            <Button Content="Reset" Style="{StaticResource NormalButtonStyle}" Height="40"/>
            <Button Content="Save" Style="{StaticResource NormalButtonStyle}" Height="40"/>
        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2" Margin="0,0,0,5">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <TextBlock Text="Group :" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cmbGroup" Style="{StaticResource DropdownStyle}"/>
                    <TextBlock Text="Cassette No. :" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="20,0,10,0"/>
                    <ComboBox x:Name="cmbCassette" Style="{StaticResource DropdownStyle}"/>
                    <TextBlock Text="Arm :" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="40,0,10,0"/>

                    <StackPanel x:Name="stackArm" Orientation="Horizontal">
                        <RadioButton Content="A" GroupName="ArmGroup" Style="{StaticResource ToggleButtonStyle}" Width="50" Height="30" IsChecked="True"/>
                        <RadioButton Content="B" GroupName="ArmGroup" Style="{StaticResource ToggleButtonStyle}" Width="50" Height="30"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Button Grid.Row="1" Content="[E001] Z Soft Limit Over" Background="{StaticResource BlueBrush}"
                    BorderBrush="Black" BorderThickness="2" FontSize="16" 
                    HorizontalContentAlignment="Left" Padding="10,0,0,0" Margin="0,0,0,5"/>

            <Border x:Name="borderGraph" Grid.Row="2" Background="{StaticResource GrayBrush}" BorderBrush="Black" BorderThickness="2" Margin="0,0,0,5">
                <Grid>
                    <ContentControl x:Name="PointsContentArea" />
                </Grid>
            </Border>

            <Border x:Name="borderBottomControl" Grid.Row="3" BorderBrush="Black" BorderThickness="2">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <RadioButton Content="Cassette" GroupName="TypeGroup" Style="{StaticResource ToggleButtonStyle}" Height="40" IsChecked="True"/>
                        <RadioButton Content="Stage" GroupName="TypeGroup" Style="{StaticResource ToggleButtonStyle}" Height="40"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <RadioButton Content="Drive" GroupName="ModeGroup" Style="{StaticResource ToggleButtonStyle}" Height="40" IsChecked="True"/>
                        <RadioButton Content="Num.Value" GroupName="ModeGroup" Style="{StaticResource ToggleButtonStyle}" Height="40"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <RadioButton Content="1 Point" GroupName="PointGroup" Style="{StaticResource ToggleButtonStyle}" Height="28" IsChecked="True"
                                     Checked="On1PointChecked"/>
                        <RadioButton Content="3 Point" GroupName="PointGroup" Style="{StaticResource ToggleButtonStyle}" Height="28"
                                     Checked="On3PointChecked"/>
                        <RadioButton Content="Manual" GroupName="PointGroup" Style="{StaticResource ToggleButtonStyle}" Height="28"
                                     Checked="OnManualChecked"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="gridRightInfo" Grid.Column="2" Margin="5,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{StaticResource GrayBrush}" BorderBrush="Black" BorderThickness="2" Margin="0,0,0,5">
                <StackPanel Margin="10">
                    <TextBlock Text="Position :" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="Axis" Margin="0,0,0,5"/>
                    <Grid Margin="0,5">
                        <TextBlock Text="A  :" VerticalAlignment="Center"/>
                        <TextBox Text="123456.123" HorizontalAlignment="Right" Width="100" Background="#ADD8E6" TextAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <TextBlock Text="θ  :" VerticalAlignment="Center"/>
                        <TextBox Text="000000.000" HorizontalAlignment="Right" Width="100" Background="#ADD8E6" TextAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <TextBlock Text="Z  :" VerticalAlignment="Center"/>
                        <TextBox Text="000000.000" HorizontalAlignment="Right" Width="100" Background="#ADD8E6" TextAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <TextBlock Text="Y  :" VerticalAlignment="Center"/>
                        <TextBox Text="000000.000" HorizontalAlignment="Right" Width="100" Background="#ADD8E6" TextAlignment="Center"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <TextBlock Text="Φ  :" VerticalAlignment="Center"/>
                        <TextBox Text="000000.000" HorizontalAlignment="Right" Width="100" Background="#ADD8E6" TextAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>
            <Border Grid.Row="1" Background="{StaticResource GrayBrush}" BorderBrush="Black" BorderThickness="2">
                <StackPanel VerticalAlignment="Center" Margin="10">
                    <TextBlock Text="Speed(max : 100%)"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBox Text="100" Width="80" Background="#ADD8E6" TextAlignment="Center" FontSize="16"/>
                        <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>