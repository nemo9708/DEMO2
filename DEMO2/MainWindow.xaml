<Window x:Class="DEMO2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Teaching Pendant Simulator" Height="600" Width="1000"
        Background="#FF333333">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF444444" BorderBrush="Gray" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        Margin="10,0,0,0">

                <Button x:Name="btnManual" Content="Manual" 
                        Width="70" Height="30" Margin="5,0"
                        FontSize="12" FontWeight="Bold"
                        Background="#FF555555" Foreground="White"/>

                <Button x:Name="btnAuto" Content="Auto" 
                        Width="70" Height="30" Margin="5,0"
                        FontSize="12" FontWeight="Bold"
                        Background="#FF555555" Foreground="White"/>

                <Button x:Name="btnLock" Content="Lock" 
                        Width="70" Height="30" Margin="5,0"
                        FontSize="12" FontWeight="Bold"
                        Background="#FF555555" Foreground="White"/>

            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Background="White">
            <ContentControl x:Name="MainContentArea"/>
        </Grid>

    </Grid>
</Window>